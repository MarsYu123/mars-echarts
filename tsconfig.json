{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "esnext",
    "types": ["vite/client"],
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "@apis/*": ["src/apis/*"],
      "@comps/*": ["src/components/*"],
      "@type/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "typeRoots": [
      "src/types"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
